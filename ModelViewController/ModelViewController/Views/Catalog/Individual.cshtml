@using ModelViewController.DataBase
@model Product

@{
    ViewData["Title"] = @Model.Name;
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="text-center">@Model.Name</h2>
            <div class="border w-50" height="200" width="200">
                <img src=@Model.Image alt="" class="img-fluid">
            </div>

            <span class="price m-1 w-50 text-center">Цена: @Model.Price.ToString("c")</span><br />
            <button class="btn btn-success w-50 m-1 p">В корзину</button>
        </div>


        <div class="col">
            
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" onclick="aboutTab()" id="adout-tab" value=@Model.Id data-bs-toggle="tab" data-bs-target="#adout" type="button" role="tab" aria-controls="home" aria-selected="true">О товаре</button>
                </li>

                <li class="nav-item" role="presentation">
                    <button onclick="characteristicsTab()" value=@Model.Id class="nav-link" id="characteristics-tab" data-bs-toggle="tab" data-bs-target="#characteristics" type="button" role="tab" aria-controls="profile" aria-selected="false">Характеристики</button>
                </li>

                <li class="nav-item" role="presentation">
                    <button onclick="serviceProduct()"  class="nav-link" id="services-tab" data-bs-toggle="tab" data-bs-target="#services" type="button" role="tab" aria-controls="contact" aria-selected="false">Услуги</button>
                </li>
            </ul>

            <div class="tab-content h-100 w-100 border-5" id="myTabContent">
                <div class="tab-pane fade  show active" id="adout" role="tabpanel" aria-labelledby="adout-tab">
                    <div class="border-5">
                        <p class="m-1">@Model.Description</p>
                    </div>
                </div>

                <div class="tab-pane fade" id="characteristics" role="tabpanel" aria-labelledby="characteristics-tab">
                    

                </div>

                <div class="tab-pane fade" id="services" role="tabpanel" aria-labelledby="services-tab">
                    

                </div>
            </div>

            
        </div>


        
        <!-- end /.info -->
    </div>

</div>
<script src="~/js/site.js" asp-append-version="true"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
